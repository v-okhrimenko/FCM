<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Drawer_layo"
    android:background="@color/gray_bg"
    android:fitsSystemWindows="true"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/ib_showDrawer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/clear"
            android:scaleX="1.1"
            android:scaleY="1.3"
            android:tint="@color/nawdrawer_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_menu_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                    android:id="@+id/bg_circle"
                    android:layout_width="120dp"
                    android:layout_height="120dp"

                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="12dp"
                    android:background="@color/clear"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:neomorph_background_color="@color/neomorph_background_color"
                    app:neomorph_corner_radius="20dp"
                    app:neomorph_elevation="2dp"
                    app:neomorph_highlight_color="@color/neomorph_highlight_color"
                    app:neomorph_shadow_color="@color/neomorph_shadow_color"
                    app:neomorph_shadow_type="outer"
                    app:neomorph_view_type="circular"
                    tools:layout_conversion_absoluteHeight="200dp"
                    tools:layout_conversion_absoluteWidth="402dp">


                </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image_nastroiki"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_account_circle_black_200dp"
                    app:civ_border_color="@color/gray_bg"
                    app:civ_border_width="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/bg_circle"
                    app:layout_constraintEnd_toEndOf="@+id/bg_circle"
                    app:layout_constraintStart_toStartOf="@+id/bg_circle"
                    app:layout_constraintTop_toTopOf="@+id/bg_circle" />

                <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                    android:id="@+id/bg_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/clear"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/constraintLayout3"
                    app:neomorph_background_color="@color/neomorph_background_color"
                    app:neomorph_corner_radius="20dp"
                    app:neomorph_elevation="5dp"
                    app:neomorph_highlight_color="@color/neomorph_highlight_color"
                    app:neomorph_shadow_color="@color/neomorph_shadow_color"
                    app:neomorph_shadow_type="outer"
                    app:neomorph_view_type="rectangular"
                    tools:layout_conversion_absoluteHeight="200dp"
                    tools:layout_conversion_absoluteWidth="402dp">

                    <Button
                        android:id="@+id/btn_clear_all_data_from_firestore"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/button_ok_blue_ripple"
                        android:backgroundTint="@color/red_50"
                        android:text="@string/clear_base"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/btn_change_pass"
                        app:layout_constraintStart_toStartOf="@+id/btn_change_pass"
                        app:layout_constraintTop_toBottomOf="@+id/btn_change_pass" />
                </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

                <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                    android:id="@+id/bg_rv_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/clear"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/constraintLayout3"
                    app:layout_constraintTop_toBottomOf="@+id/bg_rv_3"
                    app:neomorph_background_color="@color/neomorph_background_color"
                    app:neomorph_corner_radius="20dp"
                    app:neomorph_elevation="5dp"
                    app:neomorph_highlight_color="@color/neomorph_highlight_color"
                    app:neomorph_shadow_color="@color/neomorph_shadow_color"
                    app:neomorph_shadow_type="outer"
                    app:neomorph_view_type="rectangular"
                    tools:layout_conversion_absoluteHeight="200dp"
                    tools:layout_conversion_absoluteWidth="402dp">


                    <Button
                        android:id="@+id/btn_change_pass"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/button_ok_blue_ripple"
                        android:text="@string/change_pass"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>


                <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                    android:id="@+id/bg_rv_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/clear"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/constraintLayout3"
                    app:layout_constraintTop_toBottomOf="@+id/bg_rv_4"
                    app:neomorph_background_color="@color/neomorph_background_color"
                    app:neomorph_corner_radius="20dp"
                    app:neomorph_elevation="5dp"
                    app:neomorph_highlight_color="@color/neomorph_highlight_color"
                    app:neomorph_shadow_color="@color/neomorph_shadow_color"
                    app:neomorph_shadow_type="outer"
                    app:neomorph_view_type="rectangular"
                    tools:layout_conversion_absoluteHeight="200dp"
                    tools:layout_conversion_absoluteWidth="402dp">

                    <Button
                        android:id="@+id/textView_change_avatar"
                        style="@style/TextAppearance.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/button_ok_blue_ripple"
                        android:clickable="true"
                        android:text="@string/Change_avatar"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/customAvatarName" />
                </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

                <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                    android:id="@+id/bg_rv_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/clear"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/constraintLayout3"
                    app:layout_constraintTop_toBottomOf="@+id/bg_rv_5"
                    app:neomorph_background_color="@color/neomorph_background_color"
                    app:neomorph_corner_radius="20dp"
                    app:neomorph_elevation="3dp"
                    app:neomorph_highlight_color="@color/neomorph_highlight_color"
                    app:neomorph_shadow_color="@color/neomorph_shadow_color"
                    app:neomorph_shadow_type="outer"
                    app:neomorph_view_type="rectangular"
                    tools:layout_conversion_absoluteHeight="200dp"
                    tools:layout_conversion_absoluteWidth="402dp">

                    <Button
                        android:id="@+id/btn_melody"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/button_ok_blue_ripple"
                        android:text="@string/reminder_ringtone"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/btn_CustomName"
                        app:layout_constraintStart_toStartOf="@+id/btn_CustomName"
                        app:layout_constraintTop_toBottomOf="@+id/btn_CustomName" />

                </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

                <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                    android:id="@+id/bg_rv_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/clear"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/constraintLayout3"
                    app:layout_constraintTop_toBottomOf="@+id/ib_play"
                    app:neomorph_background_color="@color/neomorph_background_color"
                    app:neomorph_corner_radius="20dp"
                    app:neomorph_elevation="3dp"
                    app:neomorph_highlight_color="@color/neomorph_highlight_color"
                    app:neomorph_shadow_color="@color/neomorph_shadow_color"
                    app:neomorph_shadow_type="outer"
                    app:neomorph_view_type="rectangular">

                    <Button
                        android:id="@+id/btn_CustomName"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/button_ok_blue_ripple"
                        android:text="@string/enter_a_nickname"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>


                <TextView
                    android:id="@+id/tv_alarmName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#1E88E5"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/textView24"
                    app:layout_constraintTop_toBottomOf="@+id/textView24" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:text="TimeCheck"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/bg_circle"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Settings_menu"
                    android:textColor="#1E88E5"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/textView17"
                    app:layout_constraintTop_toTopOf="@+id/guideline9" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="46dp" />

                <ImageButton
                    android:id="@+id/ib_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@color/clear"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_alarmName"
                    app:layout_constraintStart_toEndOf="@+id/tv_alarmName"
                    app:layout_constraintTop_toTopOf="@+id/tv_alarmName" />

                <TextView
                    android:id="@+id/tvAvatarName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="t.shevchenko@gmail.com"
                    android:textColor="@color/text_gray"
                    android:textSize="8sp"
                    android:textStyle="bold|italic"
                    app:layout_constraintStart_toStartOf="@+id/textView17"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/customAvatarName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/profile_image_nastroiki"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/profile_image_nastroiki"
                    app:layout_constraintTop_toBottomOf="@+id/bg_circle" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/selected_melody"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/customAvatarName" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.github.mmin18.widget.RealtimeBlurView
        android:id="@+id/blurview_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="invisible"
        app:realtimeBlurRadius="5dp"
        app:realtimeOverlayColor="#90E0E5EC" />


        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#2A3553"
            app:headerLayout="@layout/header_layout"
            app:itemIconTint="#ffffff"
            app:itemTextColor="#ffffff"
            app:menu="@menu/drawer_menu" />


</androidx.drawerlayout.widget.DrawerLayout>