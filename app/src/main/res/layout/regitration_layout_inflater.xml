<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:cardBackgroundColor="@color/gray_bg"
    app:cardCornerRadius="@dimen/alert_corner_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/btn_registration"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_repeat_pass_registartion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/text_edit_light_blue"
            android:backgroundTint="#FFA5C1E3"
            android:ems="10"
            android:inputType="textPersonName"
            android:maxLength="15"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAlignment="center"
            android:textColor="#626262"
            android:textSize="19dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_new_pass_label" />

        <EditText
            android:id="@+id/et_pass_registartion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/text_edit_light_blue"
            android:backgroundTint="#FFA5C1E3"
            android:ems="10"
            android:inputType="textPersonName"
            android:maxLength="15"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAlignment="center"
            android:textColor="#626262"
            android:textSize="19dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView25" />

        <EditText
            android:id="@+id/et_email_registartion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/text_edit_light_blue"
            android:backgroundTint="#FFA5C1E3"
            android:ems="10"

            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAlignment="center"
            android:textColor="#626262"
            android:textSize="19dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView31" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_repeat_pass_registartion">

            <Button
                android:id="@+id/btn_registr"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_heighy"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_ok_blue_ripple"
                android:backgroundTint="@color/button_ok"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@android:string/ok"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cencel_registartion"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_heighy"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_cancel_white_ripple"
                android:text="@string/cancel"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            android:text="@string/Enter_your_password"
            android:textColor="#1E88E5"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/et_pass_registartion"
            app:layout_constraintTop_toBottomOf="@+id/et_email_registartion" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="@string/Your_email"
            android:textColor="#1E88E5"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/et_email_registartion"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <TextView
            android:id="@+id/tv_miniminSixChar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/six_charester"
            android:textColor="#DD7D7A"
            android:textSize="12sp"
            android:textStyle="italic"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/et_pass_registartion"
            app:layout_constraintTop_toBottomOf="@+id/et_pass_registartion" />

        <TextView
            android:id="@+id/tv_miniminSixChar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="пароли не совпадают"
            android:textColor="#DD7D7A"
            android:textSize="12sp"
            android:textStyle="italic"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/et_pass_registartion"
            app:layout_constraintTop_toBottomOf="@+id/et_pass_registartion" />

        <TextView
            android:id="@+id/tv_miniminSixChar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_spase_us_in_password"
            android:textColor="#DD7D7A"
            android:textSize="12sp"
            android:textStyle="italic"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/et_pass_registartion"
            app:layout_constraintTop_toBottomOf="@+id/et_pass_registartion" />

        <TextView
            android:id="@+id/tv_error_new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_password_confirm"
            android:textColor="#DD7D7A"
            android:textSize="12sp"
            android:textStyle="italic"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/et_repeat_pass_registartion"
            app:layout_constraintTop_toBottomOf="@+id/et_repeat_pass_registartion" />

        <TextView
            android:id="@+id/tv_error_new_password2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Passwords_do_not_match"
            android:textColor="#DD7D7A"
            android:textSize="12sp"
            android:textStyle="italic"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/et_repeat_pass_registartion"
            app:layout_constraintTop_toBottomOf="@+id/et_repeat_pass_registartion" />

        <TextView
            android:id="@+id/tv_needEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="enter you email"
            android:textColor="#DD7D7A"
            android:textSize="12sp"
            android:textStyle="italic"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/et_email_registartion"
            app:layout_constraintTop_toBottomOf="@+id/et_email_registartion" />

        <TextView
            android:id="@+id/tv_EmailIsntCorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_is_not_correct"
            android:textColor="#DD7D7A"
            android:textSize="12sp"
            android:textStyle="italic"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/et_email_registartion"
            app:layout_constraintTop_toBottomOf="@+id/et_email_registartion" />

        <TextView
            android:id="@+id/tv_new_pass_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            android:text="@string/repeat_password"
            android:textColor="#1E88E5"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/et_repeat_pass_registartion"
            app:layout_constraintTop_toBottomOf="@+id/et_pass_registartion" />

        <ImageView
            android:id="@+id/iv_password_check_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/et_new_pass1"
            app:layout_constraintEnd_toEndOf="@+id/et_new_pass1"
            app:layout_constraintTop_toTopOf="@+id/et_new_pass1"
            app:srcCompat="@drawable/check_ok" />

        <ImageView
            android:id="@+id/iv_password2_check_ok"
            android:layout_width="20dp"
            android:layout_height="28dp"
            android:layout_marginEnd="16dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/et_new_pass2"
            app:layout_constraintEnd_toEndOf="@+id/et_new_pass2"
            app:layout_constraintTop_toTopOf="@+id/et_new_pass2"
            app:srcCompat="@drawable/check_ok" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>